{
	"id": "pdf_tables_small",
	"category": "pdf",
	"description": "Small PDF containing tables to validate table extraction.",
	"document": {
		"path": "pdf/tiny.pdf",
		"media_type": "application/pdf"
	},
	"extraction": {
		"config": {}
	},
	"assertions": {
		"expected_mime": "application/pdf",
		"min_content_length": 50,
		"content_contains_all": [
			"Table 1",
			"Selected Numbers",
			"Celsius",
			"Fahrenheit",
			"Water Freezing Point",
			"Water Boiling Point"
		],
		"tables": {
			"min": 1
		}
	},
	"skip": {
		"requires_feature": ["ocr"],
		"notes": "PDF table extraction requires OCR feature"
	}
}
